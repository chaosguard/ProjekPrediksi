<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/ungu_anim"
    android:id="@+id/relativeLayout1"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/btnSatu"
        android:background="@drawable/buttonstyle"
        android:layout_width="150pt"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="186dp"
        android:text="Ya , saya memiliki trauma terhadap hal tertentu"
        android:textAlignment="center"
        android:textAllCaps="false" />


    <Button
        android:id="@+id/btnDua"
        android:background="@drawable/buttonstyle"
        android:layout_width="150pt"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="108dp"
        android:text="Tidak , saya tidak memiliki trauma"
        android:textAlignment="center"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnGo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txt4"
        android:layout_alignTop="@+id/txt1"
        android:text="TextView" />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnSatu"
        android:layout_marginBottom="17dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/txt3"
        android:layout_marginStart="100dp"
        android:text="TextView" />

    <Button
        android:id="@+id/btnGo"
        android:background="@drawable/buttonstyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="27dp"
        android:layout_marginEnd="14dp"
        android:text="Lanjut"
        android:textAllCaps="false" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="318dp"
        android:layout_height="216dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="178dp"
        app:srcCompat="@drawable/trauma" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-133dp"
        android:text="Apakah anda pernah mengalami kecelakaan ataupun memiliki trauma ? "
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />
</RelativeLayout>